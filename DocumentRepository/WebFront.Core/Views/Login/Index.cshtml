@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  
    <title>Demo Dell </title>
    <!-- Fav Icon -->
    <link rel="shortcut icon" href="images/favico.ico">
    <!-- Bootstrap -->
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Embed Font -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/vendors/font-awesome/css/all.css" rel="stylesheet">
    <!-- Line Awesome -->
    <link href="~/vendors/line-awesome/css/line-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <!-- Custom Theme Style -->
    <link href="~/build/css/custom.css" rel="stylesheet">
</head>

<body class="login">
                         @Html.Raw(@ViewBag.Alert) 

    <div class="l-flex-parent">
        <div class="l-flex-child l-grid-full">
            <div class="login-item">
                <section class="login_content">
                    
                    <form id="login-form" method="post" action="@Url.Content("~/login/login")">
                        @Html.AntiForgeryToken()
                        <br />

                        @*<form id="login-form">*@
                        <h1>Demo System Login</h1>
                        <p>Welcome back Please login to your account</p>
                        <div class="mb-30"></div>
                        <div class="form-group mb-20">
                            <input type="text" class="form-control login-form" name="email" placeholder="Email" required />
                        </div>
                        <div class="form-group mb-20">
                            <input type="password" id="password" name="password" class="form-control login-form" required placeholder="Password">
                            <span toggle="#password" class="fa fa-fw field-icon toggle-password fa-eye"></span>
                        </div>
                        <div class="forgetpw text-right mb-20">
                            <a href="@Url.Action("","")"><i class="fa fa-lock"></i>Forgot Password</a>

                        </div>
                        <div>
                            <button class="btn btn-primary btn-xl submit fullwidth" type="submit">
                                Login
                            </button>

                        </div>
                    </form>

                    <div class="clearfix"></div>

                </section>

            </div>
        </div>
    </div>


    <!-- jQuery -->
    <script src="~/vendors/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Custom Theme Scripts -->
    <script src="~/build/js/custom.min.js"></script>

    <!-- Hide/Show Password Scripts -->
    <script>
 
 $(".toggle-password").click(function () {

            $(this).toggleClass("fa-eye fa-eye-slash");
            var input = $($(this).attr("toggle"));
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });
    </script>


</body>
</html>
