@using System.Collections.ObjectModel
@using WebFront.Core.Helper
@{
	
	Layout = "~/Views/Shared/dashboardLayout.cshtml";
	var result = (KeywordCreateandUpdateModel)ViewBag.result;
	ViewData["Title"] = (result.keywordId==0 ? "Add New Keyword": "Edit Keyword");
}
<!-- page content -->
<div class="right_col" role="main">

	<div class="page-title">
		<div class="title_left clear">
			<h2></h2>
		</div>


	</div>
	@using (Html.BeginForm("Save", "Keywords", FormMethod.Post, new {  @class = "form-horizontal" }))
	{

		<div class="row">

			<div class="col-md-12 col-sm-12 col-xs-12">
				<div class="" role="tabpanel" data-example-id="togglable-tabs">



					<div id="myTabContent" class="tab-content no-padding">

						<!-- tab_contact start -->
						<div class="tab-pane fade active in">
							<div class="x_panel">
								<div class="x_title">
									<h3>
										@(result.keywordId==0 ? "Add New Keyword": "Edit Keyword")
									</h3>
									<div class="clearfix"></div>
								</div>
								<div class="x_content">

									<div class="form-group">
										<div class="row">

											<div class="col-md-6 col-sm-12 col-xs-12">

												<div class="clearfix"></div>
												<div class="form-group">
													<label class="control-label col-md-4 col-sm-3 col-xs-12 ">Keyword Name<span class="required">*</span></label>
													<div class="col-md-7 col-sm-8 col-xs-12">
														<input type="hidden" class="form-control" name="keywordId" value="@(result.keywordId==0 ? "0" : result.keywordId.ToString())">
														<input type="text" class="form-control" required placeholder="abc" name="title" value="@(result.title==null||result.title=="" ? "" : result.title)">
													</div>
												</div>
											</div>



										</div>


									</div>
								</div>
								<div class="clearfix"></div>
								<br />
							</div>



						</div>
						<!-- tab_contact end -->

					</div>
				</div>
			</div>

		</div>


		<div class="form-group">
			<div class="text-right">
				<button class="btn btn-default" type="button" onclick="window.history.go(-1)">Cancel</button>
				<button class="btn btn-primary" type="submit">Save</button>
			</div>
		</div>
	}

	<div class="pb-20"></div>
</div>
<!-- /page content -->

